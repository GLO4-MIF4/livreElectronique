<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="540dp"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:gravity="center"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="157dp"
                    android:layout_height="97dp"
                    android:text="Cours"
                    android:onClick="submit"
                    android:id="@+id/cours_main_body"/>
                <Button
                    android:layout_width="157dp"
                    android:layout_height="97dp"
                    android:backgroundTint="@color/Violet_clair_exr"
                    android:layout_marginLeft="5dp"
                    android:text="Exercices"
                    android:id="@+id/exercices_main"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-6dp"
                >
                <Button
                    android:layout_width="157dp"
                    android:layout_height="97dp"
                    android:backgroundTint="@color/Rose_poudre_jar"
                    android:text="Jargon"
                    android:id="@+id/jargon_main"/>
                <Button
                    android:layout_width="157dp"
                    android:layout_height="97dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@color/Rouge_cerise_quiz"
                    android:text="Quiz"
                    android:id="@+id/Quiz_main"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>