<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".connexion.Inscription"
    android:background="@drawable/fondone">

    <LinearLayout
        android:padding="20dp"
        android:layout_marginTop="80dp"
        android:background="#BB17253B"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="30dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"


            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="50dp">
                <EditText
                    android:textColor="@color/white"
                    android:id="@+id/nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:layout_marginRight="10dp"
                    android:autoSizeTextType="uniform"
                    android:hint="nom d'utilisateur"

                    />
                <EditText
                    android:textColor="@color/white"
                    android:password="true"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeTextType="uniform"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                    android:hint="mot de passe"

                    />
                <EditText
                    android:textColor="@color/white"
android:password="true"
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeTextType="uniform"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                    android:hint="repetez le mot de passe"

                    />
                <EditText
                    android:textColor="@color/white"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeTextType="uniform"
                    android:drawableLeft="@drawable/mail_24"
                    android:hint="adresse email"

                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >



            <Button

                android:textColor="#BB17253B"
                android:backgroundTint="@color/white"                android:textSize="15dp"
                android:id="@+id/connexionI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"/>
            <Button
                android:textSize="15dp"
                android:id="@+id/inscriptionI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="enregistrez"/>

        </LinearLayout>
    </LinearLayout>


</ScrollView>